{
  "name": "se-challenge-payroll",
  "author": "Stephan Behnke",
  "version": "1.0.0",
  "scripts": {
    "init": "rimraf node_modules && cp -R /app/node_modules .",
    "check": "npm-run-all build lint test",
    "lint": "tslint 'src/**/*.ts'",
    "start": "ts-node src/index.ts",
    "test": "jest",
    "watch:start": "nodemon --watch src --ext ts --exec 'npm run start'",
    "watch:test": "jest --watch"
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": ".*\\.(test|it)\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "js"
    ]
  },
  "devDependencies": {
    "@types/jest": "^19.2.2",
    "@types/koa": "^2.0.39",
    "@types/koa-router": "^7.0.22",
    "@types/koa-static": "^2.0.22",
    "@types/koa-views": "^2.0.1",
    "@types/moment": "^2.13.0",
    "@types/node": "^7.0.14",
    "@types/papaparse": "^4.1.28",
    "@types/pg": "^6.1.39",
    "jest": "^19.0.2",
    "nodemon": "^1.11.0",
    "npm-run-all": "^4.0.2",
    "pgtools": "^0.2.3",
    "rimraf": "^2.6.1",
    "ts-jest": "^19.0.14",
    "ts-node": "^3.0.2",
    "tslint": "^5.1.0",
    "typescript": "^2.3.2"
  },
  "dependencies": {
    "handlebars": "^4.0.7",
    "koa": "^2.2.0",
    "koa-multer": "^1.0.1",
    "koa-router": "^7.1.1",
    "koa-static": "^3.0.0",
    "koa-views": "^6.0.2",
    "moment": "^2.18.1",
    "multer": "^1.3.0",
    "papaparse": "^4.3.1",
    "pg": "^6.1.5",
    "reflect-metadata": "^0.1.10",
    "typeorm": "0.0.11"
  }
}
